// Weather Application Code

// HTML structure
const appContainer = document.getElementById('app');
appContainer.innerHTML = `
  <div class="weather-app">
    <h1>Weather Application</h1>
    <div class="search-bar">
      <input type="text" id="cityInput" placeholder="Enter city name...">
      <button id="searchButton">Search</button>
    </div>
    <div id="weatherResults" class="results">
      <!-- Weather details will be displayed here -->
    </div>
  </div>
`;

// CSS Styles
const styles = document.createElement('style');
styles.innerHTML = `
  .weather-app {
    font-family: Arial, sans-serif;
    text-align: center;
    margin: 20px;
  }
  .search-bar {
    margin-bottom: 20px;
  }
  #cityInput {
    padding: 10px;
    width: 200px;
    font-size: 16px;
  }
  #searchButton {
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
  }
  .results {
    margin-top: 20px;
  }
  .result-item {
    margin: 10px 0;
  }
`;
document.head.appendChild(styles);

// JavaScript Functionality
const apiKey = 'bd11094af0040c64d853e1d346af348f; 
const weatherResults = document.getElementById('weatherResults');
const cityInput = document.getElementById('cityInput');
const searchButton = document.getElementById('searchButton');

async function fetchWeather(city) {
  try {
    const response = await fetch(`https://api.openweathermap.org/data/2.5/weather?q=${city}&units=metric&appid=${apiKey}`);
    if (!response.ok) throw new Error('City not found');

    const data = await response.json();
    displayWeather(data);
  } catch (error) {
    weatherResults.innerHTML = `<p class="error">Error: ${error.message}</p>`;
  }
}

function displayWeather(data) {
  const { name, main, weather } = data;
  const temperature = main.temp;
  const description = weather[0].description;

  weatherResults.innerHTML = `
    <div class="result-item">
      <h2>${name}</h2>
      <p>Temperature: ${temperature} Â°C</p>
      <p>Weather: ${description}</p>
    </div>
  `;
}

searchButton.addEventListener('click', () => {
  const city = cityInput.value.trim();
  if (city) fetchWeather(city);
});
